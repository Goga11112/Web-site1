@model Product
@{
    Layout = "_Layout";
    ViewData["Title"] = "Создание продукта";  //  <- Заголовок страницы
}
@if (ViewData["MyDataKey"] != null)
{
    <p>@ViewData["MyDataKey"]</p>
}
else
{
    <p>Данные не найдены.</p>
}
<form asp-controller="Product" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
</form>