@using Microsoft.AspNetCore.Antiforgery
@model Warehouse
@{
    Layout = "_Layout";
    ViewData["Title"] = "Создание скдала";  //  <- Заголовок страницы
}
<h2>Создание нового</h2>

<h4>Склада</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Warehouse" asp-action="Create_w" method="post" enctype="multipart/form-data" input>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <span class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя склада:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Адрес:</label>
                <input asp-for="Address" class="form-control" /> 
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Product" asp-action="Index">Назад к списку товаров</a>
</div>
